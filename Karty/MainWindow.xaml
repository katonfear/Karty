<Window x:Class="Karty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Karty"
        mc:Ignorable="d"
        Title="Karty płatnicze" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>

        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Identyfikator karty:" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center"  />
        <Label x:Name="label1" Content="Numer seryjny karty:" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="1" VerticalAlignment="Center" />
        <Label x:Name="label2" Content="Numer konta właściciela:" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="2" VerticalAlignment="Center" />
        <Label x:Name="label3" Content="Pin:" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBox x:Name="tbid" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="500" Margin="0,0,80,0" IsReadOnly="True"/>
        <TextBox x:Name="tbserial" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="580"/>
        <TextBox x:Name="tbaccount" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="580"/>
        <PasswordBox x:Name="tbPin" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="580"/>
        <Label x:Name="label4" Content="Wyszukiwanie:" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="4" VerticalAlignment="Center"/>
        <TextBox x:Name="etsearch" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,0,90,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Center" Height="20" />
        <Button x:Name="serach" Grid.Column="1" Content="Szukaj" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="4" Width="75" Height="20" VerticalAlignment="Center" Click="button_Click"/>
        <Grid Grid.Row="5" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="367*"/>
                <ColumnDefinition Width="33*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label x:Name="label5" Content="Lista kart" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="371,0,0,0"/>
            <ListBox x:Name="cardList" Grid.Row="1" Grid.ColumnSpan="2" />
        </Grid>
        <Button x:Name="btAdd" Content="Dodaj" HorizontalAlignment="Left" Margin="7,3,0,0" Grid.Row="6" VerticalAlignment="Top" Click="btAdd_Click"/>
        <Button x:Name="btDelete" Content="Usuń" HorizontalAlignment="Left" Margin="54,3,0,2" Grid.Row="6" Click="btDelete_Click"/>
        <Button x:Name="btStart" Content="Uruchom serwer" HorizontalAlignment="Left" Margin="270,0,0,0" Grid.Row="6" VerticalAlignment="Center" Grid.Column="1" Click="btStart_Click"/>
        <Label x:Name="label6" Grid.Column="1" Content="Adres:" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.Row="6" VerticalAlignment="Top"/>
        <TextBox x:Name="portText" Grid.Column="1" HorizontalAlignment="Left" Margin="44,0,0,0" Grid.Row="6" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="220"/>
        <Button x:Name="btGen" Grid.Column="1" Content="Generuj" HorizontalAlignment="Right" Margin="0,0,5,0" VerticalAlignment="Center" Width="75" Click="btGen_Click"/>
    </Grid>
</Window>
